# EC2 Production Environment Variables
# Copy this file to .env.ec2 and update the values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_very_secure_root_password_here
MYSQL_USER=goalapp_user
MYSQL_PASSWORD=your_secure_database_password_here

# Frontend Configuration - REPLACE WITH YOUR EC2 PUBLIC IP OR DOMAIN
REACT_APP_API_URL=http://YOUR_EC2_PUBLIC_IP:8080

# Optional: If you have a domain name
# REACT_APP_API_URL=https://your-domain.com

# Java Memory Settings (adjust based on your EC2 instance size)
JAVA_OPTS=-Xmx256m -Xms128m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# Kafka Memory Settings
KAFKA_HEAP_OPTS=-Xmx512m -Xms512m

# Spring Profile
SPRING_PROFILES_ACTIVE=docker

# Logging Level (optional)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_GOALAPP=DEBUG